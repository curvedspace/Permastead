<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="250"
        x:Class="Permastead.Views.Dialogs.AnimalTypeWindow"
        xmlns:vm="using:Permastead.ViewModels.Dialogs"
        x:DataType="vm:AnimalTypeWindowViewModel" x:CompileBindings="True"
        Icon="/Assets/cpanel_branding.png"
        Title="Animal Type Window">
        
        <Grid ColumnDefinitions="Auto,Auto,Auto,*" RowDefinitions="Auto,Auto,Auto,*"  Margin="10">
            
            <TextBlock Grid.Row="0" Grid.Column="0" Margin="10,10,0,0">ID:</TextBlock>
            <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding AnimalType.Id }" IsEnabled="False" Margin="10,10,10,10"></TextBox>
            <Label Grid.Row="0" Margin="10,10,10,10" Grid.Column="2">Code:</Label>
            <TextBox Grid.Row="0" Grid.Column="3" Text="{Binding AnimalType.Code }" Margin="10,10,10,10"></TextBox>
            <TextBlock Grid.Row="1" Grid.Column="0" Margin="10,15,10,10">Description:</TextBlock>
            <TextBox Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3"  Text="{Binding AnimalType.Description }" Margin="10,10,10,10"></TextBox>
        
            <Label Grid.Row="2" Grid.Column="0" Margin="10">Start Date:</Label>
            <CalendarDatePicker Grid.Row="2" Grid.Column="1" Margin="10,0,0,0"  Name = "EndDate" SelectedDate="{Binding AnimalType.StartDate, Mode=TwoWay}">
            </CalendarDatePicker>
        
            <Label Grid.Row="2" Grid.Column="2" Margin="10">End Date:</Label>
            <CalendarDatePicker Margin="10,0,0,0" Grid.Row="2" Grid.Column="3" Name = "LastTrigger" SelectedDate="{Binding AnimalType.EndDate, Mode=TwoWay}">
            </CalendarDatePicker>
            
            <Image Grid.Row="3" Grid.Column="0" HorizontalAlignment="Left" Margin="10,15,0,0" Width="32" Height="32" Source="/Assets/burro.png" />
        
            <StackPanel Grid.Row="3" Grid.Column="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,10,0">
                <Button Name="SaveButton" Margin="10" Click="SaveButton_OnClick" >Save</Button>
                <Button Name="CancelButton" Margin="10" Click="CancelButton_OnClick">Cancel</Button>
            </StackPanel>
        
        </Grid>
    
</Window>
