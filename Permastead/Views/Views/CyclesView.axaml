<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             xmlns:vm="using:Permastead.ViewModels.Views"
             xmlns:views="clr-namespace:Permastead.Views.Views"
             xmlns:lvc="using:LiveChartsCore.SkiaSharpView.Avalonia"
             x:DataType="vm:CyclesViewModel"
             x:Class="Permastead.Views.Views.CyclesView">
    
    <UserControl.DataContext>
        <vm:CyclesViewModel/>
    </UserControl.DataContext>
    
    <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,*">
        <StackPanel>
            <WrapPanel>
                <Image Margin="20" Width="24" Height="24" Source="/Assets/control_repeat_blue.png" />
                <TextBlock FontWeight="Bold" Margin="20,26,20,20">Cycles</TextBlock>
                <!-- <Separator MaxWidth="5"></Separator> -->
                <Button Command="{Binding RefreshDataCommand}" x:Name="Refresh" HorizontalAlignment="Right" Margin="10,0">Refresh</Button> 
            </WrapPanel>
        </StackPanel>
        
        <Grid Grid.Row="1" Grid.Column="0" ColumnDefinitions="*,*,*,*" RowDefinitions="*,*,*">
            <Grid Grid.Column="1" Grid.Row="1" ColumnDefinitions="*" RowDefinitions="Auto,*">
                <Label Grid.Column="0" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10">Birthdays</Label>

                <lvc:PieChart Grid.Row="1" x:Name="People1"
                              InitialRotation="-90"
                              MinValue="0"
                              AnimationsSpeed="00:00:03.000"
                              Series="{Binding Series}"
                              MaxValue="100">
                    
                </lvc:PieChart>
                
            </Grid>
        </Grid>
    </Grid>
    
</UserControl>
