<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:materialIcons="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             xmlns:vm="using:Permastead.ViewModels.Views"
             xmlns:model="using:Models"
             x:DataType="vm:ContactsViewModel"
             x:Class="Permastead.Views.Views.ContactsView">
    <!-- <StackPanel> -->
    <Grid ColumnDefinitions="*" RowDefinitions="Auto,*">
        <WrapPanel>
            <Image Margin="20" Width="24" Height="24" Source="/Assets/outlook_new_meeting.png" />
            <!-- <materialIcons:MaterialIcon Kind="People" Margin="20"/> -->
            <TextBlock FontWeight="Bold" Margin="20,20,20,20">People</TextBlock>
            <Separator MaxWidth="5" Foreground="Black"></Separator>
            <TextBlock Name="EventsCount" Text="{Binding PeopleCount , StringFormat='{}{0} total'}" Margin="20,20,20,20"></TextBlock>
        </WrapPanel>
        
        <TreeDataGrid Grid.Row="1" Margin="10" Source="{Binding PersonSource}"></TreeDataGrid>
        
    </Grid>
    <!-- </StackPanel> -->
</UserControl>
